{
  "compilerOptions": {
    "rootDirs": [
      "src",
      "stories"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*",
    "wallaby.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}